- @coupons.each do |d|
  .col-sm-4.col-xs-6
    .panel.panel-default
      .panel-thumbnail

        = image_tag d.coupon_pic.url ,:style => "max-width: 100%"

      .panel-body
        %p.lead 
        = d.title
        %p 
          = d.description
          %br
          = d.sale_offer
        %p
          %a{:href=>"/coupons/#{d.id}/edit"} EDIT
          %a{:href=>"/coupons/#{d.id}/edit"} DELETE
          %br
          = link_to "Download Photo", download_coupon_pic_coupon_path(d)
      



